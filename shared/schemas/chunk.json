{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qa-assist.local/schemas/chunk.json",
  "title": "Chunk",
  "type": "object",
  "required": ["id", "session_id", "idx", "status", "analysis_status"],
  "properties": {
    "id": {"type": "string", "format": "uuid"},
    "session_id": {"type": "string", "format": "uuid"},
    "idx": {"type": "integer", "minimum": 0},
    "start_ts": {"type": ["string", "null"], "format": "date-time"},
    "end_ts": {"type": ["string", "null"], "format": "date-time"},
    "gcs_uri": {"type": ["string", "null"]},
    "status": {"type": "string", "enum": ["uploading", "ready", "failed"]},
    "analysis_status": {"type": "string", "enum": ["pending", "running", "done", "failed"]},
    "content_type": {"type": ["string", "null"]},
    "byte_size": {"type": ["integer", "null"], "minimum": 0}
  },
  "additionalProperties": false
}
